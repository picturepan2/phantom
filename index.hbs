{{!< default}}
{{!-- The main content area --}}
{{#if posts}}
<main class="phantom-body" role="main">
  <div class="container">
    <div class="columns">
      {{#foreach posts}}
        <div class="column col-3 col-lg-4 col-md-6 col-sm-12">
          {{> "post-card"}}
        </div>
      {{/foreach}}
    </div>
    <div class="columns">
      <div class="column">
        {{pagination}}
      </div>
    </div>
  </div>
</main>
{{/if}}
