<div class="phantom-header">
  <div class="container">
    <div class="navbar">
      <div class="navbar-section">
        <a href="{{@blog.url}}" class="logo" alt="{{@blog.description}}">{{@blog.title}}</a>
      </div>
      <div class="navbar-center">
        {{#if @blog.navigation}}
          {{navigation}}
        {{/if}}
      </div>
      <div class="navbar-section">
        {{#if @blog.facebook}}
          <a class="social-link social-link-fb" href="{{facebook_url @blog.facebook}}" target="_blank">{{> "icons/facebook"}}</a>
        {{/if}}
        {{#if @blog.twitter}}
          <a class="social-link social-link-tw" href="{{twitter_url @blog.twitter}}" target="_blank">{{> "icons/twitter"}}</a>
        {{/if}}
        <a class="rss-button" href="{{@blog.url}}/rss/" target="_blank">{{> "icons/rss"}}</a>
      </div>
    </div>
  </div>
</div>
