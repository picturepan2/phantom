<article class="card card-post{{post_class}}{{#unless feature_image}} no-image{{/unless}}">
  {{#if feature_image}}
    <div class="card-image">
      <a class="card-link" href="{{url}}">
        <div class="post-card-image" style="background-image: url({{feature_image}})"></div>
      </a>
    </div>
  {{/if}}
  <div class="card-header">
    <a class="card-link" href="{{url}}">
      <h2 class="post-card-title">{{title}}</h2>
    </a>
  </div>
  <footer class="card-footer">
    <time class="post-card-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMMM YYYY" timeago="true"}}</time>
  </footer>
</article>
